@model IEnumerable<LeaveTrackerMVC.Models.LeaveType>
@{
    ViewData["Title"] = "Leave Types";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Leave Types</h2>
            <small class="text-muted">Manage available leave categories and defaults</small>
        </div>
        <div>
            <a asp-action="Create" class="btn btn-success">+ New Leave Type</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <input id="search" class="form-control" placeholder="Search leave types or days..." />
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr>
                            <th style="width:60px">#</th>
                            <th>Type Name</th>
                            <th style="width:140px">Default Days</th>
                            <th style="width:260px"></th>
                        </tr>
                    </thead>
                    <tbody id="leaveTable">
                        @if (Model != null && Model.Any())
                        {
                            var i = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@item.TypeName</td>
                                    <td>@item.DefaultDays</td>
                                    <td class="text-end">
                                        <a asp-action="Edit" asp-route-id="@item.LeaveTypeId" class="btn btn-sm btn-outline-primary me-1">Edit</a>
                                        <a asp-action="Details" asp-route-id="@item.LeaveTypeId" class="btn btn-sm btn-outline-secondary me-1">Details</a>
                                        <a asp-action="Delete" asp-route-id="@item.LeaveTypeId" class="btn btn-sm btn-outline-danger">Delete</a>
                                    </td>
                                </tr>
                                i++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4">No leave types found. <a asp-action="Create">Create one</a>.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Small, self-contained styles to improve appearance */
    .card { border-radius: 0.6rem; }
    #search { max-width: 380px; }
    .table td, .table th { vertical-align: middle; }
</style>

<script>
    (function () {
        const search = document.getElementById('search');
        const table = document.getElementById('leaveTable');
        if (!search || !table) return;
        search.addEventListener('input', function () {
            const q = this.value.toLowerCase().trim();
            for (const row of table.rows) {
                const typeCell = row.cells[1] ? row.cells[1].textContent.toLowerCase() : '';
                const daysCell = row.cells[2] ? row.cells[2].textContent.toLowerCase() : '';
                row.style.display = (typeCell.includes(q) || daysCell.includes(q)) ? '' : 'none';
            }
        });
    })();
</script>
