@model LeaveTrackerMVC.Models.LeaveType
@{
    ViewData["Title"] = "Create Leave Type";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add Leave Type</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="LeaveTypes" asp-action="Leavetype" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="TypeName" class="form-label">Type Name</label>
                            <input asp-for="TypeName" class="form-control" placeholder="e.g. Annual, Sick" />
                            <span asp-validation-for="TypeName" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DefaultDays" class="form-label">Default Days</label>
                            <input asp-for="DefaultDays" type="number" min="0" class="form-control" />
                            <span asp-validation-for="DefaultDays" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary px-4">Save Leave Type</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted small">
                    Provide a clear leave type name and the default number of days allocated per year.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
