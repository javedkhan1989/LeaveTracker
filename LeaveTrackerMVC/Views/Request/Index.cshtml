@model IEnumerable<LeaveTrackerMVC.Models.LeaveRequest>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Leave Requests</h5>
            <div class="input-group" style="max-width:360px;">
                <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                <input id="searchInput" type="search" class="form-control border-start-0" placeholder="Search by employee, type, or status">
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Employee</th>
                            <th scope="col">Leave Type</th>
                            <th scope="col">From</th>
                            <th scope="col">To</th>
                            <th scope="col">Days</th>
                            <th scope="col">Reason</th>
                            <th scope="col">Status</th>
                            <th scope="col" style="width:180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="requestsTable">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                var employeeName = item.Employee != null ? $"{item.Employee.Name}" : $"ID: {item.EmployeeId}";
                                var leaveType = item.LeaveType != null ? item.LeaveType.TypeName : item.LeaveTypeId.ToString();
                                var days = (item.ToDate.Date - item.FromDate.Date).Days + 1;
                                <tr>
                                    <td>@employeeName</td>
                                    <td>@leaveType</td>
                                    <td>@item.FromDate.ToString("MMM dd, yyyy")</td>
                                    <td>@item.ToDate.ToString("MMM dd, yyyy")</td>
                                    <td>@days</td>
                                    <td style="max-width:250px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">@item.Reason</td>
                                    <td>
                                        @if (string.Equals(item.Status, "Approved", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-success">@item.Status</span>
                                        }
                                        else if (string.Equals(item.Status, "Rejected", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge bg-danger">@item.Status</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">@item.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @* <a href="@Url.Action("Details", "Request", new { id = item.LeaveRequestId })" class="btn btn-sm btn-outline-primary me-1">View</a> *@
                                        <a href="@Url.Action("Approve", "Request", new { id = item.LeaveRequestId })" class="btn btn-sm btn-success me-1">Approve</a>
                                        <a href="@Url.Action("Reject", "Request", new { id = item.LeaveRequestId })" class="btn btn-sm btn-danger">Reject</a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4">No leave requests found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer text-end">
            <a href="@Url.Action("Create", "Request")" class="btn btn-primary">New Request</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function(){
            const searchInput = document.getElementById('searchInput');
            const table = document.getElementById('requestsTable');

            function normalize(text) {
                return (text || '').toLowerCase();
            }

            searchInput && searchInput.addEventListener('input', function (e) {
                const q = normalize(e.target.value);
                Array.from(table.rows).forEach(row => {
                    const cells = Array.from(row.cells).map(c => normalize(c.innerText));
                    const visible = cells.some(c => c.indexOf(q) !== -1);
                    row.style.display = visible ? '' : 'none';
                });
            });
        })();
    </script>
}
