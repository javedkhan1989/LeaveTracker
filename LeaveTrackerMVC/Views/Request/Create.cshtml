@model LeaveTrackerMVC.Models.LeaveRequest
@{
    ViewData["Title"] = "Apply for Leave";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Apply for Leave</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" asp-controller="Request" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
 <div class="mb-3">
                        <label asp-for="EmployeeId" class="form-label">Employee Id</label>
                        <input type="text" asp-for="EmployeeId"  class="form-control"  />

                        <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LeaveTypeId" class="form-label">Leave Type</label>
                        <select asp-for="LeaveTypeId" asp-items="ViewBag.LeaveTypes" class="form-select">
                            <option value="">-- Select leave type --</option>
                        </select>
                        <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FromDate" class="form-label">From</label>
                            <input asp-for="FromDate" class="form-control" type="date" />
                            <span asp-validation-for="FromDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ToDate" class="form-label">To</label>
                            <input asp-for="ToDate" class="form-control" type="date" />
                            <span asp-validation-for="ToDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Reason" class="form-label">Reason</label>
                        <textarea asp-for="Reason" class="form-control" rows="4" placeholder="Provide a brief reason for your leave"></textarea>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <input asp-for="Status" class="form-control"  />
                        <div class="form-text">Status will be set to "Pending" after submission.</div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="Index" asp-controller="Request" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-success">Submit Application</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="mt-3 text-muted small">
            Tip: Ensure your dates are correct. Contact HR if you need to attach documents.
        </div>
    </div>
</div>

<partial name="_ValidationScriptsPartial" />
